@model OctoFX.TradingWebsite.Models.DealModel

@{
  ViewBag.Title = "Your Quote";
}

<hgroup class="title">
  <h1>@ViewBag.Title</h1>
</hgroup>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Spot quote</h3>
  </div>
  <div class="panel-body">
          <div class="form-horizontal">

            <div class="form-group">
              @Html.LabelFor(m => m.Quote.SellAmount, "I have (sell):", new { @class = "col-sm-2 control-label" })
              <div class="col-sm-4">
                <p class="form-control-static">@Model.Quote.SellBuyCurrencyPair.Sell @Model.Quote.SellAmount.ToString("n2")</p>
              </div>
            </div>
            
        <div class="form-group">
          @Html.LabelFor(m => m.Quote.BuyAmount, "I want (buy):", new { @class = "col-sm-2 control-label" })
          <div class="col-sm-4">
            <p class="form-control-static">@Model.Quote.SellBuyCurrencyPair.Buy @Model.Quote.BuyAmount.ToString("n2")</p>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success" value="Commit to deal" />
            <a href="@Url.Action("Quote", "Deal")" class="btn btn-link">Get another quote</a>
          </div>
        </div>

      </div>
  </div>
</div>
